#########################################################################################\
#		-MAKEFILE-																		#\
#		PROJECT: cpp01 - EXERCISE: ex05													#\
#########################################################################################

NAME = Harl

CC	= g++
CFLAGS = -Wall -Wextra -Werror
C98FLAG = -std=c++98
FLAGS = $(CFLAGS) $(C98FLAG)
RM = rm -rf

########################################################################################\
Directories
########################################################################################

BIN_DIR = bin
SRC_DIR = src
LIB_DIR = lib

########################################################################################\
Sources
########################################################################################

C_FILES	=	main \
			Harl


H_FILES	=	Harl \


SRCS	=	$(C_FILES:=.cpp)
HDRS	=	$(addsufix .hpp, $(H_FILES))

OBJ			= $(addprefix .\, $(C_FILES:=.o))

########################################################################################\
Rules
########################################################################################

all: $(NAME)

$(NAME): $(OBJ) $(HDRS)
	$(CC) $(FLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp $(HDRS)
	$(CC) $(FLAGS) -c $< -o $@

clean: 
	rm $(OBJ)

fclean: clean
	rm $(NAME)

re: fclean all