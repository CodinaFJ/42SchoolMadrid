#########################################################################################\
#		-MAKEFILE-																		#\
#		PROJECT: cpp00 - EXERCISE: ex01													#\
#########################################################################################

NAME = PhoneBook

CC	= g++
CFLAGS = -Wall -Wextra -Werror
C98FLAG = -std=c++98
FLAGS = $(CFLAGS) $(C98FLAG)
RM = rm -rf

########################################################################################\
Sources
########################################################################################

C_FILES	=	main \
			Contact \
			PhoneBook \

H_FILES	=	Contact \
			PhoneBook \

SRCS	=	$(C_FILES:=.cpp)
HDRS	=	$(addsufix .hpp, $(H_FILES))

OBJ			= $(C_FILES:=.o)

########################################################################################\
Rules
########################################################################################

all: $(NAME)

$(NAME): $(OBJ) $(HDRS)
	$(CC) $(FLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp $(HDRS)
	$(CC) $(FLAGS) -c $< -o $@

fclean: clean
	rm $(NAME)

re: fclean all