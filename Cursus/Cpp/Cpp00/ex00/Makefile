#########################################################################################\
#		-MAKEFILE-																		#\
#		PROJECT: cpp00 - EXERCISE: ex00													#\
#########################################################################################

NAME = megaphone

CC	= g++
CFLAGS = -Wall -Wextra -Werror
C98FLAG = -std=c++98
RM = rm -rf

########################################################################################\
Rules
########################################################################################

all: $(NAME)

$(NAME): $(NAME).cpp
	$(CC) $(CFLAGS) $(C98FLAG) $(NAME).cpp -o $(NAME)

fclean: clean
	rm $(NAME)

re: fclean all